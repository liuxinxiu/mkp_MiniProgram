  flex-direction: column;
  height: 100%;
  background: #f1f2f8;
  color: #131313;
  font-size: 12px;
}
.brand-navbar{
  /* flex: none;
  display: flex; */
  width: 170rpx;
  height: 100%;
  position: fixed;
  z-index: 100;
  background: #e7e8f1;
}
.brand-navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 120rpx;
  z-index: 100;
}
.brand-navbar .item.active{
  background: #fff;
  border-left:5px solid #050505;
}

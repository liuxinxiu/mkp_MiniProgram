.brand-box .allbox .brand-title .bg-right{ background: linear-gradient(to right, #fff, 76%, #f1f2f8)}

.brand-box .allbox .brand-title .bg-center{ position: absolute; z-index: 208; top: 0px; left: 50%; margin-left: -40rpx; width: 80rpx; height: 28rpx; background: #f1f2f8; text-align: center;}

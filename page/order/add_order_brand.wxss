.brand-box{ margin-left: 170rpx; position: relative; z-index: 200;}
.brand-box .allbox{width: 90%; margin: 0 auto;}
.brand-box .allbox .brand-title .bg-left,
.brand-box .allbox .brand-title .bg-right{ width: 50%; float: left; height: 28rpx;}

.acbox .flexWarp .cline{}


/****** 顶部服务选择 liuxinxiu by 2018-07-26 ******/
.tabc .fl,
.tabc .fr{ width: 50%; line-height: 30px; padding-top: 40px; padding-bottom: 20px; float: left; color: #a4a4a4; font-size: 14px;}

.paraWarp{
   width: 100%;
   margin-bottom: 0px !important;
}
.paraWarp .lkey{
   width: 140rpx !important;
}
.paraWarp.tline{border-bottom: 1px solid #ebebeb; width: 100%;}
.paraWarp .input{min-height: 50px !important; height: 50px !important; vertical-align: middle; display: inline-block; width: 100%;}




.acbox .flexWarp{
  display:flex;/*设为伸缩容器*/  
  flex-flow:row;/*伸缩项目单行排列*/  
}
.acbox .flexWarp .fl{
   flex:1;/*这里设置为占比1，填充满剩余空间*/ 
   -webkit-box-flex: 1; 
}



/*order-bottom */
.order-bottom {
  height: 50px;
  background: #fff;
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border-top: 1px solid #ccc; */
  color: #131313; font-size: 14px;-moz-box-shadow:0px -3px 20px #E3E3E3; -webkit-box-shadow:0px -3px 20px #E3E3E3; box-shadow:0px -3px 20px #E3E3E3;
}

.order-bottom .flexWarp { width: 100%;}
.order-bottom .flexWarp .fl{ width: 65%;}
.order-bottom .flexWarp .fr{ width: 35%;}
.order-bottom .flexWarp .gray{color: #aeaeae  !important;} /*a9a9a9*/
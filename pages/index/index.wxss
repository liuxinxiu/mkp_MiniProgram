.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.swiper-box .hot-box {
  display: block;
  height: 100%;
  font-family: Helvetica;
}
/* list */
.swiper-box .themes-list {
  background: #fff;
  display: block;
  margin-bottom: 20px;
}
.swiper-box .themes-list-box {
  display: block;
  position: relative;
  padding: 16px 20px;
  border-bottom: 1px solid #f2f2f2;
}
.swiper-box .themes-list-main {
  margin-left: 1px;
}
.swiper-box .themes-list-name {
  font-size: 14px;
  color: #444;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
}
/*tab*/
.swiper-tab {
  height: 50px;
  background: #fff;
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border-top: 1px solid #ccc; */
  color: #131313; font-size: 14px;-moz-box-shadow:0px -3px 20px #E3E3E3; -webkit-box-shadow:0px -3px 20px #E3E3E3; box-shadow:0px -3px 20px #E3E3E3;
}
.swiper-tab .liney{width: 1px; height: 30px; font-size: 0px; overflow: hidden; position: absolute; left: 50%; bottom: 10px; background: #e6e6e6;}
.swiper-tab .active {
  /*border-bottom: 1px solid #FFCC00;*/
  color: #1bc912;
}
.swiper-tab .swiper-tab-list {
  margin: 0 14%;
  padding: 0 4px;
  font-size: 28rpx;
  font-family: Helvetica;
  display: flex;
}

.swiper-tab .swiper-tab-list .swiper-tab-img {
  text-align: center;
  width: 50%;
}
.swiper-tab .swiper-tab-list .swiper-tab-img .img {
  width:23px;
  height: 23px;
}



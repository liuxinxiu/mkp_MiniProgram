/****** swiper-containe add by liuxinxiu 2018-07-18 ******/
.swiper-container{
  position: relative;
  border-radius: 10px 10px 10px 10px
}
.swiper-container .swiper{
  height: 230rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
  border-radius: 10px 10px 10px 10px
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 5rpx;
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 5rpx;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  width: 100rpx;
  background: #fff; /*f80*/
}



